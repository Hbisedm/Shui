{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "shui",
  "version": "0.1.0",
  "identifier": "com.shui.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "EcoPaste",
        "url": "http://localhost:3000/",
        "width": 360,
        "height": 600,
        "minWidth": 360,
        "minHeight": 600,
        "maximizable": false,
        "decorations": false,
        "visible": true,
        "transparent": true,
        "alwaysOnTop": false,
        "acceptFirstMouse": true,
        "skipTaskbar": true,
        "visibleOnAllWorkspaces": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "assets/**/*",
      "icons/**/*"
    ]
  }
}