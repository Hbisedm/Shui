{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Shui",
  "version": "0.1.4",
  "identifier": "com.shui.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:3000/",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": false,
      "title": "Shui",
      "id": "main-tray",
      "showMenuOnLeftClick": true
    },
    "windows": [
      {
        "label": "main",
        "title": "Shui",
        "url": "setting/",
        "width": 680,
        "height": 460,
        "resizable": false,
        "visible": false,
        "maximizable": false,
        "hiddenTitle": true,
        "skipTaskbar": true,
        "titleBarStyle": "Overlay",
        "dragDropEnabled": false,
        "windowEffects": {
          "effects": [
            "sidebar"
          ],
          "state": "active"
        }
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/**/*"
    ]
  }
}